@page "/eventhandling"

<PageTitle>Event-Handling</PageTitle>
<h1>Event-Handling</h1>

<p>Input: <input type="text" @onkeydown="AddValue"></p>
<p>Output: @inputValue</p>
@code {
    public string inputValue = string.Empty;

    private void AddValue(KeyboardEventArgs e)
    {
        if (e.Key == "Backspace" && inputValue.Length > 0)
        {
            inputValue = inputValue.Remove(inputValue.Length - 1);
        }
        else if (e.Key.Length == 1)
            inputValue += e.Key;

        }
    }

